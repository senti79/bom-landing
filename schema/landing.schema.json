{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Landing Content Schema",
  "anyOf": [
    {
      "type": "object",
      "required": ["version", "title", "sections"],
      "properties": {
        "version": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": { "type": "string" },
              "headline": { "type": "string" },
              "sub": { "type": "string" },
              "image": { "type": "string" },
              "cta": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "href": { "type": "string" }
                },
                "additionalProperties": false
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["title"],
                  "properties": {
                    "icon": { "type": ["string", "null"] },
                    "title": { "type": "string" },
                    "desc": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    {
      "type": "object",
      "properties": {
        "heroTitleHtml": { "type": "string" },
        "heroSubtitleHtml": { "type": "string" },
        "demoHtml": { "type": "string" },
        "featuresTitleHtml": { "type": "string" },
        "featuresSubtitleHtml": { "type": "string" },
        "feature1TitleHtml": { "type": "string" },
        "feature1DescriptionHtml": { "type": "string" },
        "feature2TitleHtml": { "type": "string" },
        "feature2DescriptionHtml": { "type": "string" },
        "feature3TitleHtml": { "type": "string" },
        "feature3DescriptionHtml": { "type": "string" },
        "finalCtaTitleHtml": { "type": "string" }
      },
      "additionalProperties": true
    }
  ]
}
